@model IEnumerable<Examen.Models.Paciente>


@{
    ViewData["Title"] = "Pacientes";
}

<h2>Lista de Pacientes</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PacienteNombre)
            </th>
            <th></th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PacienteNombre)</td>
                <td>@Html.DisplayFor(modelItem => item.PacienteNombre2)</td>
                <td>@Html.DisplayFor(modelItem => item.AcompApellido)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.PacienteId">Editar</a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.PacienteId">Detalles</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PacienteId">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
